<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!-- ImageView al centro del ConstraintLayout -->
    <ImageView
        android:id="@+id/imageViewLogoProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_splashscreen2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scritta cliccabile "Salta" in alto a destra -->
    <TextView
        android:id="@+id/textViewSalta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:gravity="center"
        android:text="Salta"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp" />

    <!-- Scritta cliccabile "Indietro" in alto a sinistra -->
    <ImageView
        android:id="@+id/imageButtonIndietro"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_freccia"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp" />

    <!-- Bottone circolare in basso a destra sotto al secondo ImageView -->
    <ImageButton
        android:id="@+id/buttonContinua"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="10dp"
        android:background="@drawable/button_freccia"
        android:src="@drawable/icon_freccia2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
