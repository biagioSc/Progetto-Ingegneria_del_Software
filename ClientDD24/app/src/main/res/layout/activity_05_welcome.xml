<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

<!-- ImageView al centro del ConstraintLayout -->

    <!-- Botton "Registrati" -->
    <ImageView
        android:id="@+id/imageViewWelcome"
        android:layout_width="320dp"
        android:layout_height="290dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/image_logowelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonRegistrati"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bianco"
        android:elevation="2dp"
        android:padding="15dp"
        android:text="Registrati"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@+id/imageViewWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="350dp" />

    <!-- Botton "Accedi" -->
    <TextView
        android:id="@+id/buttonAccedi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Accedi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_celeste"
        android:padding="15dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistrati"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- TextView per le informazioni -->
    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAccedi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="( Oppure )"
        android:textAlignment="center"
        android:textColor="#7F7F82"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/buttonAccedi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <!-- Loghi di accesso (Facebook, Apple, Google, Github) -->
    <LinearLayout
        android:id="@+id/linearLayoutLogos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp">

        <ImageButton
            android:id="@+id/buttonFacebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_social_facebook"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/buttonApple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_social_apple"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/buttonGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_social_google"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/buttonGithub"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_social_github"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
