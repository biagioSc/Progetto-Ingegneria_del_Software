<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/image_setprofilo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="35dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/customBlue"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@dominio.com"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotoImageView">

    </TextView>

    <TextView
        android:id="@+id/nomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Utente"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTextView">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayoutVertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/nomeTextView"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutProfilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/profiloImageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_profilo_modifica"
                android:scaleType="centerInside"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Modifica Profilo"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_freccia_profilo"
                android:scaleType="centerInside"
                android:layout_marginLeft="15sp">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutAcquisti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/acquistiImageView"
                android:layout_width="30dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:src="@drawable/icon_profilo_acquisti"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Acquisti"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_freccia_profilo"
                android:scaleType="centerInside"
                android:layout_marginLeft="15sp">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutNegozio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/negozioImageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/icon_profilo_negozio"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Negozio"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_freccia_profilo"
                android:scaleType="centerInside"
                android:layout_marginLeft="15sp">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutSeguite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/asteImageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_profilo_save"
                android:scaleType="fitCenter"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Aste Seguite"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_freccia_profilo"
                android:scaleType="centerInside"
                android:layout_marginLeft="15sp">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_profilo_modpass"
                android:scaleType="centerInside"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Modifica Password"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_freccia_profilo"
                android:scaleType="centerInside"
                android:layout_marginLeft="15sp">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_profilo_terms"
                android:scaleType="centerInside"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Termini e Condizioni"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_freccia_profilo"
                android:scaleType="centerInside"
                android:layout_marginLeft="15sp">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutVertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_profilo_logout"
                android:scaleType="centerInside"
                android:layout_marginLeft="20dp">
            </ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Logout"
                android:textSize="18sp"
                android:layout_marginLeft="15dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemActiveIndicatorStyle="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:itemTextAppearanceActive="@color/white"
        app:itemTextAppearanceInactive="@color/lightGrey"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemBackground="@drawable/navigation_item_background"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>