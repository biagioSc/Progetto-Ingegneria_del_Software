<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">


    <ImageView
        android:id="@+id/indietroImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_freccia"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dettaglioTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dettaglio Asta"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/indietroImageView"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tipo_astaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asta silenziosa"
        android:textColor="#7F7F82"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/dettaglioTextView"
        app:layout_constraintTop_toBottomOf="@id/dettaglioTextView" />



    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tipo_astaTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image_notfound"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/followerTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Seguono"
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_product"
                />

            <TextView
                android:id="@+id/nomeProdottoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nome Prodotto"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/followerTextView"
                />


            <TextView
                android:id="@+id/categoriaTextView"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/text_categoria_venditore"
                android:text="Categoria"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toStartOf="@+id/sottocategoriaTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nomeProdottoTextView"
                />

            <TextView
                android:id="@+id/sottocategoriaTextView"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/text_categoria_venditore"
                android:text="Sottocategoria"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/categoriaTextView"
                app:layout_constraintTop_toBottomOf="@id/nomeProdottoTextView"
                />


            <TextView
                android:id="@+id/descrizioneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descrizione"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/categoriaTextView"
                />

            <TextView
                android:id="@+id/testoDescrizioneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="At enim hic etiam dolore. Dulce amarum, leve asperum, prope longe, stare movere, quadratum rotundum. At certe gravius. Nullus est igitur cuiusquam dies natalis. Paulum, cum regem Persem captum adduceret, eodem flumine invectio?"
                android:textColor="#7F7F82"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descrizioneTextView"
                />

            <TextView
                android:id="@+id/prossimoPrezzoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Questa asta chiude tra"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/testoDescrizioneTextView"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutOre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toBottomOf="@id/prossimoPrezzoTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layoutMinuti">


                <TextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ore"
                    app:layout_constraintTop_toBottomOf="@+id/hours"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutMinuti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/prossimoPrezzoTextView"
                app:layout_constraintStart_toEndOf="@id/layoutOre"
                app:layout_constraintEnd_toStartOf="@id/layoutSecondi">

                <TextView
                    android:id="@+id/minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minuti"
                    app:layout_constraintTop_toBottomOf="@+id/minute"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutSecondi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/prossimoPrezzoTextView"
                app:layout_constraintStart_toEndOf="@id/layoutMinuti"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp">

                <TextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secondi"
                    app:layout_constraintTop_toBottomOf="@+id/second"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- TextView per i minuti -->

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toTopOf="@+id/spiegazione"
                app:layout_constraintTop_toBottomOf="@id/layoutMinuti"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintCard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/intestazione"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offerte"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/linearOfferte"/>

                    <LinearLayout
                        android:id="@+id/linearOfferte"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/intestazione"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/spiegazione"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cos'è un'asta silenziosa?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nestedScroll2"
                />

            <TextView
                android:id="@+id/testoSpiegazioneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="In un'asta silenziosa, puoi fare offerte segrete su un articolo desiderato. Il venditore sceglierà l'offerta vincente alla fine dell'asta, e solo lui può vedere le offerte. È una chance unica di fare un'offerta strategica mantenendo la tua privacy. Ricorda: l'offerta che fai è definitiva, quindi pensaci bene prima di inviarla. Buona fortuna!"
                android:textColor="#7F7F82"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spiegazione"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>